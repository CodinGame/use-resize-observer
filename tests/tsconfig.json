{
  "compilerOptions": {
    "module": "es6",
    "target": "es5",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "declaration": false,
    "emitDeclarationOnly": false,
    "jsx": "react",
    "noEmit": true,
    "typeRoots": [
      "@types/karma", "../node_modules/@types"]
  },
  "include": [".", "../src"],
  "exclude": [
    "../src/**/*.test.tsx"
  ]
}
